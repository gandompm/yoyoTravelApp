<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/wifi_reload" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.19"/>
    <TextView
            android:text="Oops somthing went wrong! "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView42" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/imageView2"
            android:fontFamily="@font/roboto_medium" android:textSize="@dimen/header_2"
            android:textColor="@color/black"/>
    <TextView
            android:text="Please check your internet connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_language" app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView42" android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/header_2" android:textColor="@color/black"/>
    <TextView
            android:text="and try @string/please_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView58" app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_language" android:textSize="@dimen/header_2"
            android:textColor="@color/black" android:fontFamily="@font/roboto_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
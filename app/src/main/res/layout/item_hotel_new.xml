<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="@dimen/standard_margin"
    android:layout_marginBottom="14dp"
    android:background="@android:color/transparent"
    android:clickable="true">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/shapeiv_hotel_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:shape_roundRect_bottomLeftRadius="8dp"
            app:shape_roundRect_bottomRightRadius="8dp"
            app:shape_roundRect_topLeftRadius="8dp"
            app:shape_roundRect_topRightRadius="8dp">



                <ImageView
                    android:id="@+id/iv_hotel_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_hotel" />


        </com.github.florent37.shapeofview.shapes.RoundRectView>


        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/shapeiv_hotel_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_roundRect_bottomLeftRadius="64dp"
            app:shape_roundRect_bottomRightRadius="8dp"
            app:shape_roundRect_topLeftRadius="64dp"
            app:shape_roundRect_topRightRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


        </com.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/tv_hotel_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_thin"
            android:text="@string/tv_item_hotel_name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_font_size"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <RatingBar
            android:id="@+id/ratingBar_hotel_item"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:theme="@style/RatingBar"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_name" />

        <TextView
            android:id="@+id/tv_hotel_item_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/tv_item_hotel_address"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar_hotel_item" />

        <TextView
            android:id="@+id/tv_hotel_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLength="25"
            android:text="Palang Shahr, Palang Sq."
            android:textAllCaps="false"
            android:textSize="@dimen/small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_address1"
            app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_address1" />

        <TextView
            android:id="@+id/tv_hotel_item_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/tv_item_hotel_type"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_address1" />

        <TextView
            android:id="@+id/tv_hotel_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLength="20"
            android:text="Hotel"
            android:textAllCaps="false"
            android:textSize="@dimen/small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_type1"
            app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_type1" />

        <TextView
            android:id="@+id/tv_hotel_item_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:elevation="3dp"
            android:text="@string/tv_item_hotel_price"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/small"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_type1"
            app:layout_constraintVertical_bias="0.04000002" />

        <TextView
            android:id="@+id/tv_hotel_item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tv_item_hotel_price2"
            android:textAllCaps="false"
            android:textSize="@dimen/small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_price1"
            app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_price1" />

        <TextView
            android:id="@+id/tv_hotel_item_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLength="20"
            android:text="40$"
            android:textAllCaps="false"
            android:textSize="@dimen/small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_price2"
            app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_price2" />

        <TextView
            android:id="@+id/tv_hotel_item_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLength="20"
            android:text="38$"
            android:textAllCaps="false"
            android:textSize="@dimen/small"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_old_price"
            app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_old_price" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.38258576" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>
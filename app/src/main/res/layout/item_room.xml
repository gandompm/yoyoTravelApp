<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="@dimen/standard_margin"
    android:layout_marginBottom="4dp"
    android:background="@android:color/transparent"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_hotel_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Twin Room  (non smoking) High Floor - Main Tower"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_hotel_item_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beds :"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_name" />

    <TextView
        android:id="@+id/tv_hotel_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLength="20"
        android:text="Normal Capacity :"
        android:textAllCaps="false"
        android:textColor="@color/black"

        android:textSize="@dimen/small"
        app:layout_constraintStart_toEndOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_type1" />

    <TextView
        android:id="@+id/tv_hotel_item_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:elevation="3dp"
        android:text="@string/tv_item_hotel_price"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_type" />

    <TextView
        android:id="@+id/tv_hotel_item_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tv_item_hotel_price2"
        android:textAllCaps="false"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_price1"
        app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_price1" />

    <TextView
        android:id="@+id/tv_hotel_item_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:maxLength="20"
        android:text="40$"
        android:textAllCaps="false"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_price2"
        app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_price2" />

    <TextView
        android:id="@+id/tv_hotel_item_new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:maxLength="20"
        android:text="38$"
        android:textAllCaps="false"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_old_price"
        app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_old_price" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        android:text="Price Per Aditional Guest :"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_hotel_item_price1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Max Capacity :"
        android:textColor="@color/black"
        android:textSize="@dimen/small"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="3 Adults"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="40 $"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2 Adults"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_type"
        app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_type" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 twin Bed"
        android:textSize="@dimen/small"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_hotel_item_type1"
        app:layout_constraintStart_toEndOf="@+id/tv_hotel_item_type1" />

    <ImageView
        android:id="@+id/iv_roomitem_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_add_circle_outline_blue_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_roomitem_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/iv_roomitem_plus"
        app:layout_constraintEnd_toStartOf="@+id/iv_roomitem_plus"
        app:layout_constraintTop_toTopOf="@+id/iv_roomitem_plus" />

    <ImageView
        android:id="@+id/iv_roomitem_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_remove_circle_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_roomitem_num"
        app:layout_constraintEnd_toStartOf="@+id/tv_roomitem_num"
        app:layout_constraintTop_toTopOf="@+id/tv_roomitem_num" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/curve_shape_fill_blue"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="BOOK NOW"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/small"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
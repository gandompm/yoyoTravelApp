<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                 >

    <ImageView
            android:src="@color/white"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/imageView39" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_travellercompanion_title"
            android:text="@string/edit_traveller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView39" android:textColor="@color/black1"/>
    <ImageView
            android:id="@+id/iv_travellercompanion_edit_back"
            android:src="@drawable/ic_arrow_back_colorprimary_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/imageView39"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView39" android:padding="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
    />

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/large_margin"
                android:clipToPadding="false" android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/imageView39" app:layout_constraintBottom_toBottomOf="parent"
    >

        <androidx.cardview.widget.CardView
                android:src="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cv_traveller_companion"
                app:layout_constraintTop_toBottomOf="@+id/imageView39" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_goneMarginTop="@dimen/large_margin"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
                android:paddingBottom="@dimen/large_margin">


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                        android:text="@string/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView71"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/standard" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>

                <com.llollox.androidtoggleswitch.widgets.ToggleSwitch
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:textToggleLeft="@string/male"
                        app:textToggleRight="@string/female"
                        app:checkedBackgroundColor="@color/colorAccent"
                        app:checkedTextColor="@android:color/white"
                        app:uncheckedBackgroundColor="@color/white"
                        app:uncheckedTextColor="@color/black1"
                        app:separatorColor="@color/white"
                        app:borderRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView71"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:id="@+id/toggleSwitch3"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/standard"
                        android:id="@+id/textView20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toggleSwitch3" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>

                <EditText
                        android:id="@+id/et_travellercompanion_edit_firstname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView20"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:inputType="textPersonName"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/standard"
                        android:id="@+id/tv_flightdetails_departure_time_toop"
                        app:layout_constraintTop_toBottomOf="@+id/et_travellercompanion_edit_firstname"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>

                <EditText
                        android:id="@+id/et_travellercompanion_edit_lastname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_flightdetails_departure_time_toop"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:inputType="textPersonName"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="#c2c2c2"
                        android:textSize="@dimen/standard"
                        android:id="@+id/tv_flightdetails_destination"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/et_travellercompanion_edit_lastname"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

                <EditText
                        android:id="@+id/et_travellercompanion_edit_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_flightdetails_destination"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:inputType="textEmailAddress"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="#c2c2c2"
                        android:textSize="13.3sp"
                        android:id="@+id/textView24"
                        app:layout_constraintTop_toBottomOf="@+id/et_travellercompanion_edit_email"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>

                <EditText
                        android:id="@+id/et_travellercompanion_edit_mobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView24"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:inputType="phone"/>
                <Button
                        android:id="@+id/button_travellercompanion_edit_save"
                        android:text="@string/save"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/colorprimary_rectangle"
                        app:layout_constraintEnd_toStartOf="@+id/button_travellercompanions_edit_delete"
                        app:layout_constraintTop_toBottomOf="@+id/editText7"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/white" app:layout_constraintHorizontal_bias="0.5"
                        android:visibility="visible" android:layout_marginTop="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
                <Button
                        android:text="@string/delete"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_travellercompanions_edit_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/colorprimary_border_bg" android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toEndOf="@+id/button_travellercompanion_edit_save"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintTop_toTopOf="@+id/button_travellercompanion_edit_save"
                        app:layout_constraintBottom_toBottomOf="@+id/button_travellercompanion_edit_save"
                        android:visibility="visible"/>
                <TextView
                        android:text="@string/date_of_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/et_travellercompanion_edit_mobile"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/editText4" app:layout_constraintTop_toBottomOf="@+id/textView22"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="@string/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/editText4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText3" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView11"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="@string/iranian_national_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView25"
                        app:layout_constraintTop_toBottomOf="@+id/editText3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText5"
                        app:layout_constraintTop_toBottomOf="@+id/textView25" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="@string/passport_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView27"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText5"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/editText6" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView27" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:inputType="number"/>
                <TextView
                        android:text="@string/passport_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        app:layout_constraintTop_toBottomOf="@+id/editText6"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/editText7"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        android:inputType="date" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
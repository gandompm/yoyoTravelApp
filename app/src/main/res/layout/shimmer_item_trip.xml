<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:layout_weight="6"
              android:layout_margin="8dp">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="140dp"
            android:background="@drawable/round_trip_item"
            android:paddingBottom="20dp"
            android:paddingTop="8dp">

        <TextView
                android:id="@+id/title_price"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/blue_light"
                android:layout_alignParentTop="true"
                android:textSize="12sp"
                android:background="@color/demo_dark_transparent"/>

        <TextView
                android:id="@+id/tv_trip_item_small_price"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_price"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:background="@color/demo_dark_transparent"
        />

        <TextView
                android:id="@+id/tv_trip_item_small_operator_title"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_trip_item_small_operator"
                android:textColor="@color/blue_light"
                android:textSize="12sp"
                android:background="@color/demo_dark_transparent"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:id="@+id/tv_trip_item_small_operator"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@color/demo_dark_transparent"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <!-- RIGHT TITLE PART -->
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_trip_content_item"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp">


        <TextView
                android:id="@+id/tv_trip_item_small_trip_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:background="@color/demo_dark_transparent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
        />

        <TextView
                android:id="@+id/tv_trip_item_small_trip_group"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/demo_dark_transparent"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_trip_item_small_trip_title"
                android:layout_marginBottom="4dp"/>


        <ImageView
                android:id="@+id/title_from_to_dots_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tv_trip_item_small_trip_group"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_toEndOf="@+id/title_from_to_dots"
                android:layout_toRightOf="@+id/title_from_to_dots"
                android:background="@color/demo_dark_transparent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/tv_trip_item_small_start_date"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignStart="@+id/title_from_to_dots_divider"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/tv_trip_item_small_from"/>

        <TextView
                android:id="@+id/tv_trip_item_small_from"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignStart="@+id/title_from_to_dots_divider"
                android:textSize="8sp"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/title_from_to_dots_divider"/>


        <TextView
                android:id="@+id/tv_trip_item_small_to"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignEnd="@+id/title_from_to_dots_divider"
                android:textSize="8sp"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/title_from_to_dots_divider"/>

        <TextView
                android:id="@+id/tv_trip_item_small_end_date"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignEnd="@+id/title_from_to_dots_divider"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/tv_trip_item_small_to"/>

        <TextView
                android:id="@+id/tv_trip_item_small_duration"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerHorizontal="true"
                android:textSize="8sp"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/title_from_to_dots_divider"/>

        <TextView
                android:id="@+id/tv_trip_item_small_duration_title"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerHorizontal="true"
                android:textSize="8sp"
                android:background="@color/demo_dark_transparent"
                android:layout_below="@+id/tv_trip_item_small_duration"/>


        <TextView
                android:id="@+id/tv_trip_item_type_text"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/title_from_to_dots_divider"
                android:background="@color/demo_dark_transparent"
                android:layout_above="@+id/tv_trip_item_small_type"
                android:textSize="@dimen/small" />

        <TextView
                android:id="@+id/tv_trip_item_small_type"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/title_from_to_dots_divider"
                android:background="@color/demo_dark_transparent"
                android:textColor="@color/black"
                android:textSize="@dimen/small"/>

        <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_trip_item_small_language"
                android:background="@color/demo_dark_transparent" />

        <TextView
                android:id="@+id/tv_trip_item_small_language"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/demo_dark_transparent"
                android:textSize="@dimen/small"
                android:textColor="@color/black"/>


        <TextView
                android:id="@+id/tv_trip_item_small_capacity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/title_from_to_dots_divider"
                android:gravity="center"
                android:background="@color/demo_dark_transparent"
                android:textSize="@dimen/small"
                android:layout_alignParentBottom="true"
        />



    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_margin="6dp">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="140dp"
        android:background="@color/colorPrimary"
        android:paddingBottom="20dp"
        android:paddingTop="8dp">



        <ImageView
            android:id="@+id/title_previous_price"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/demo_dark_transparent"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/tv_tirp_item_small_night_num"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="@color/demo_dark_transparent"
            android:layout_above="@id/tv_tirp_item_small_day_num"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/tv_tirp_item_small_day_num"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/demo_dark_transparent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <!-- RIGHT TITLE PART -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp">


        <ImageView
            android:id="@+id/tv_tirp_item_small_tirp_title"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:background="@color/demo_dark_transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:id="@+id/tv_tirp_item_small_tirp_group"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:background="@color/demo_dark_transparent"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_tirp_item_small_tirp_title"
            android:layout_marginBottom="4dp"/>


        <ImageView
            android:id="@+id/title_from_to_dots"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/from_to_purple"
            android:layout_below="@+id/tv_tirp_item_small_tirp_group"/>

        <ImageView
            android:id="@+id/tv_tirp_item_small_start_date"
            android:layout_width="35dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/title_from_to_dots"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/title_from_to_dots"
            android:fadingEdge="horizontal"
            android:background="@color/demo_dark_transparent"
            android:layout_below="@+id/tv_tirp_item_small_tirp_group"/>

        <ImageView
            android:id="@+id/title_from_to_dots_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_tirp_item_small_start_date"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/title_from_to_dots"
            android:layout_toRightOf="@+id/title_from_to_dots"
            android:src="@color/contentDividerLine" />

        <ImageView
            android:id="@+id/tv_tirp_item_small_end_date"
            android:layout_width="35dp"
            android:layout_height="12dp"
            android:layout_below="@id/title_from_to_dots_divider"
            android:layout_toEndOf="@id/title_from_to_dots"
            android:layout_toRightOf="@id/title_from_to_dots"
            android:fadingEdge="horizontal"
            android:layout_marginTop="4dp"
            android:background="@color/demo_dark_transparent"
            android:layout_marginBottom="2dp"/>



        <ImageView
            android:id="@+id/tv_tirp_item_destination_text"
            android:layout_width="35dp"
            android:layout_height="10dp"
            android:layout_alignStart="@id/tv_tirp_item_destination"
            android:layout_below="@+id/tv_tirp_item_small_end_date"
            android:background="@color/demo_dark_transparent"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/tv_tirp_item_destination"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_tirp_item_destination_text"
            android:background="@color/demo_dark_transparent"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="10dp"
            android:layout_above="@id/tv_tirp_item_small_language"
            android:layout_alignTop="@+id/tv_tirp_item_destination_text"
            android:background="@color/demo_dark_transparent"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/tv_tirp_item_small_language"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/tv_tirp_item_destination"
            android:background="@color/demo_dark_transparent"/>


        <ImageView
            android:id="@+id/tv_tirp_item_small_capacity"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/standard_margin"
            android:background="@color/demo_dark_transparent"/>



    </RelativeLayout>
</LinearLayout>
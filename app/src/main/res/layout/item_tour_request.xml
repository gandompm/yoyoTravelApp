<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        android:elevation="2dp"
        android:layout_height="130dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="300dp">

        <TextView
                android:id="@+id/tv_schedule_title"
                tools:text="Historical Tour"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black1"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline_vertical_3"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_" android:fontFamily="@font/roboto_medium"
                android:text="Historical Tour" android:textSize="14sp"/>


        <ImageView
                android:id="@+id/iv_schedule_item_leftside_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="@color/blue2"
                app:layout_constraintTop_toTopOf="parent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_3"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.4"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent=".8"/>
        <Button
                android:text="Complete Info"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/button_schedule_book" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/blue2" android:maxLines="2" android:textSize="14sp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_scheduleItem_start_time"
                android:text="Amin Salehi Far" android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView37"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView37"
                app:layout_constraintTop_toTopOf="@+id/imageView37" android:textColor="@color/black1"
                android:fontFamily="serif"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView107"
                android:text="2019/8/25" android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4" android:textColor="@color/black1"
                android:fontFamily="serif"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/calender"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView37"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView37"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/profile_blue"
                android:id="@+id/imageView37"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_3" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_schedule_title"/>
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" app:srcCompat="@drawable/persons_number_symbol"
                android:id="@+id/imageView42"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_1" tools:layout_editor_absoluteY="84dp"
        />
        <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView84" app:layout_constraintStart_toEndOf="@+id/imageView42"
                android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="@+id/imageView42"
                app:layout_constraintBottom_toBottomOf="@+id/imageView42" android:textSize="14sp"
                android:textColor="@color/black1" android:fontFamily="serif"/>
        <TextView
                android:text="Status: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="152dp" android:id="@+id/textView87" android:textColor="#0F63C7"
                android:fontFamily="@font/roboto_medium"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_scheduleItem_start_time"/>
        <TextView
                android:text="Confirmed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView100"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView87"
                app:layout_constraintStart_toEndOf="@+id/textView87"
                android:textColor="@color/black1" android:fontFamily="serif" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/button_schedule_book" app:autoSizeTextType="uniform"
                android:maxLines="1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
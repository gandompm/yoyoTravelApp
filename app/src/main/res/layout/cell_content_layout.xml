        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/content_delivery_date_badge"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/type"
                    android:textSize="@dimen/small"/>

                <TextView
                        android:id="@+id/tv_trip_item_big_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/content_delivery_date_badge"
                        android:layout_below="@id/content_delivery_date_badge"
                        tools:text="Health, Nature"
                        android:textColor="@color/mainTextColor"
                        android:autoSizeTextType="uniform"
                        android:paddingEnd="4dp"
                        android:maxLines="3"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginEnd="0dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/content_deadline_badge"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/transport"
                    android:textSize="@dimen/small"/>

                <TextView
                    android:id="@+id/tv_trip_item_big_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/content_deadline_badge"
                    android:layout_below="@id/content_deadline_badge"
                    android:text="Bus and Car"
                    android:textColor="@color/mainTextColor"
                    android:autoSizeTextType="uniform"
                    android:textSize="@dimen/small"
                    android:maxLines="2"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <!-- request button -->
        <com.dagang.library.GradientButton
            android:id="@+id/content_request_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            app:button_start_color="@color/persiangard_green"
            app:button_end_color="@color/persiangard_green"
            app:button_text="@string/buton_trip_item_big_details"
            app:button_text_color="@color/white"
            app:button_press_end_color="@color/blue_light"
            app:button_press_start_color="@color/blue_light"
            android:textAlignment="center"
            android:textSize="@dimen/standard"
            app:button_radius="4dp"
            app:button_is_shadowed="false"/>



        <TextView
            android:id="@+id/tv_trip_item_big_passenger_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="5 people have purchased this trip"
            android:textAlignment="center"
            android:textColor="@color/contentBadgeTitle"
            android:textSize="12sp"/>


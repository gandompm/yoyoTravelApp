        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/content_from_badge"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/from_badge"
                    android:textSize="@dimen/small"/>

                <TextView
                    android:id="@+id/tv_trip_item_big_start_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/content_from_badge"
                    android:layout_below="@id/content_from_badge"
                    android:text="Tehran"
                    android:textColor="@color/mainTextColor"
                    android:textSize="12sp"
                    android:autoSizeTextType="uniform"
                    android:paddingEnd="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_trip_item_big_start_point_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_trip_item_big_start_point"
                    android:layout_below="@id/tv_trip_item_big_start_point"
                    tools:text="@string/content_from2_mock"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/small" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/content_to_badge"
                    style="@style/ContentMainBadgeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/to_badge"
                    android:textSize="@dimen/small"/>

                <TextView
                    android:id="@+id/tv_trip_item_big_end_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/content_to_badge"
                    android:layout_below="@id/content_to_badge"
                    android:text="Kashan"
                    android:textColor="@color/mainTextColor"
                    android:textSize="12sp"
                    android:autoSizeTextType="uniform"
                    android:paddingEnd="4dp"
                    android:textStyle="bold" />


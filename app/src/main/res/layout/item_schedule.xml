<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        android:elevation="2dp"
        android:layout_height="130dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="300dp">


        <TextView
                android:id="@+id/tv_scheduleItem_startDate1"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                tools:text="17"
                android:autoSizeTextType="uniform"
                android:lines="1"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_bold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_3" android:layout_marginStart="8dp"
                android:textColor="#000000"/>
        <TextView
                android:id="@+id/tv_scheduleItem_startDate2"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:lines="1"
                tools:text="17"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="@+id/textView84" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView84"
                android:textColor="#000000" app:layout_constraintVertical_bias="0.387"
                app:layout_constraintStart_toEndOf="@+id/textView84"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_1"/>
        <TextView
                android:id="@+id/tv_schedule_price1"
                tools:text="30$"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black1"
                app:layout_constraintStart_toEndOf="@+id/textView95"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView95" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_" android:textSize="12sp"/>

        <TextView
                android:id="@+id/tv_schedule_title"
                tools:text="Historical Tour"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black1"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_" android:fontFamily="@font/roboto_medium"
                android:text="Historical Tour" android:textSize="14sp"/>
        <TextView
                android:id="@+id/tv_scheduleItem_remainingCapacity1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="20"
                app:layout_constraintStart_toEndOf="@+id/textView94"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView94"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_" android:layout_marginEnd="8dp"
                android:textSize="12sp"/>


        <ImageView
                android:id="@+id/iv_schedule_item_leftside_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="@color/blue2"
                app:layout_constraintTop_toTopOf="parent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_3"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent=".8"/>
        <Button
                android:text="@string/book"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/button_schedule_book" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/blue2"/>
        <TextView
                android:text="Mar"
                android:autoSizeTextType="uniform"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleItem_startDate1"
                app:layout_constraintEnd_toEndOf="@+id/tv_scheduleItem_startDate1"
                app:layout_constraintStart_toStartOf="@+id/tv_scheduleItem_startDate1" android:textColor="#000000"
                android:textAlignment="center" android:textSize="14sp" android:lines="1"/>
        <TextView
                android:text="Mar"
                android:autoSizeTextType="uniform"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView87"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleItem_startDate2"
                app:layout_constraintEnd_toEndOf="@+id/tv_scheduleItem_startDate2"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/textView84" android:textSize="12sp"
                android:textAlignment="center" android:lines="1"/>
        <TextView
                android:text="__"
                android:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView84"
                android:fontFamily="@font/roboto_bold" android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/tv_scheduleItem_startDate1" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_scheduleItem_startDate1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:id="@+id/textView88" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_schedule_title"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_title" android:layout_marginStart="8dp"
                tools:text="Start :" android:textColor="#333333" android:text="Start :" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView91" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView88"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_title" android:layout_marginStart="8dp"
                tools:text="End :" android:textColor="#333333" android:text="End :" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView94" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView91"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_title" android:layout_marginStart="8dp"
                tools:text="Capacity :" android:textColor="#333333" android:text="Capacity :" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView95" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView94"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_title" android:layout_marginStart="8dp"
                tools:text="Price :" android:textColor="#333333" android:text="Price :" android:textSize="12sp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_scheduleItem_start_time" app:layout_constraintStart_toEndOf="@+id/textView88"
                android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView88"
                tools:text="10:00 AM" app:layout_constraintEnd_toStartOf="@+id/button_schedule_book"
                android:layout_marginEnd="8dp" android:text="10:00 AM" android:textSize="12sp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView107" app:layout_constraintStart_toEndOf="@+id/textView91"
                android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView91"
                tools:text="22:00 PM" app:layout_constraintEnd_toStartOf="@+id/button_schedule_book"
                android:layout_marginEnd="8dp" android:text="22:00 PM" android:textSize="12sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
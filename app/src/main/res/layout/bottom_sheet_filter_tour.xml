<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_tour_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:cardCornerRadius="8dp"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <TextView
        android:id="@+id/tv_filter_tour_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="4dp"
        android:background="@color/white"
        android:gravity="center"
        android:elevation="2dp"
        android:text="@string/tv_filter_hotel_title"
        android:textSize="@dimen/header_1" />

    <ImageView
        android:id="@+id/iv_filter_tour_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:elevation="2dp"
        android:src="@drawable/ic_close_black_24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04136253" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96107054" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.06" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tour Type :"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />


        <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
            android:id="@+id/groupbutton_filtertour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_filterhotel_quality"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            app:tbgChildSpacingForLastRow="align"
            app:layout_constraintEnd_toStartOf="@+id/guideline11"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            >

            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:id="@+id/button_filterhotel_one_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Advanture" />

            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:id="@+id/button_filterhotel_two_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Health" />

            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:id="@+id/button_filterhotel_three_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Nature" />

            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:id="@+id/button_filterhotel_four_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Sport" />

            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:id="@+id/button_filterhotel_five_star"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Food" />


        </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tour Language :"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/groupbutton_filtertour" />


        <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
            android:id="@+id/group_choices_filtertour_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline11"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/choice_a"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="Persian"/>

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/choice_b"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="English" />

            <com.nex3z.togglebuttongroup.button.CircularToggle
                android:id="@+id/choice_c"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="Arabic" />


        </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>


    <TextView
        android:id="@+id/tv_filtertour_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Duration :"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/group_choices_filtertour_language" />

    <TextView
        android:id="@+id/tv_filtertour_duration_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="20 * Day"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_filtertour_duration"
        app:layout_constraintStart_toEndOf="@+id/tv_filtertour_duration" />

    <com.appyvet.materialrangebar.RangeBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rangebar_filtertour_duration"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_filtertour_duration_num"
        app:mrb_pinMaxFont="15sp"
        app:mrb_pinMinFont="12sp"
        app:mrb_pinRadius="14dp"
        app:mrb_rangeBar="false"
        app:mrb_rangeBarPaddingBottom="20dp"
        app:mrb_rangeBar_rounded="true"
        app:mrb_selectorBoundarySize="2dp"
        app:mrb_selectorSize="10dp"
        app:mrb_temporaryPins="true"
        app:mrb_tickEnd="20"
        app:mrb_tickInterval="1"
        app:mrb_tickStart="1"
        app:mrb_connectingLineColor="@color/colorPrimary"
        app:mrb_pinColor="@color/colorPrimary"
        app:mrb_selectorColor="@color/white"
        app:mrb_selectorBoundaryColor="@color/colorPrimary"
        app:mrb_pinTextColor="@color/white"
        app:mrb_rangeBarColor="@color/light_gray"
        app:mrb_tickColor="@android:color/transparent"
        />


    <TextView
        android:id="@+id/tv_filtertour_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=" Age Range : "
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/rangebar_filtertour_duration" />

    <TextView
        android:id="@+id/tv_filtertour_age_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1 - 100"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_filtertour_age"
        app:layout_constraintStart_toEndOf="@+id/tv_filtertour_age" />

        <com.appyvet.materialrangebar.RangeBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_filtertour_age"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_filtertour_price"
            app:layout_constraintEnd_toStartOf="@+id/guideline11"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_filtertour_age"
            app:mrb_connectingLineColor="@color/colorPrimary"
            app:mrb_pinColor="@color/colorPrimary"
            app:mrb_selectorColor="@color/white"
            app:mrb_selectorBoundaryColor="@color/colorPrimary"
            app:mrb_pinTextColor="@color/white"
            app:mrb_rangeBarColor="@color/light_gray"
            app:mrb_tickColor="@android:color/transparent"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="12sp"
            app:mrb_pinRadius="14dp"
            app:mrb_rangeBar="true"
            app:mrb_rangeBarPaddingBottom="20dp"
            app:mrb_rangeBar_rounded="true"
            app:mrb_selectorBoundarySize="2dp"
            app:mrb_selectorSize="10dp"
            app:mrb_temporaryPins="true"
            app:mrb_tickEnd="100"
            app:mrb_tickInterval="1"
            app:mrb_tickStart="1" />

    <TextView
        android:id="@+id/tv_filtertour_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Price:"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/rangebar_filtertour_age" />

    <TextView
        android:id="@+id/tv_filtertour_price_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="50 - 1500 $"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_filtertour_price"
        app:layout_constraintStart_toEndOf="@+id/tv_filtertour_price" />


        <com.appyvet.materialrangebar.RangeBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar_filtertour_price"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline11"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tv_filtertour_price"
            app:mrb_connectingLineColor="@color/colorPrimary"
            app:mrb_pinColor="@color/colorPrimary"
            app:mrb_selectorColor="@color/white"
            app:mrb_selectorBoundaryColor="@color/colorPrimary"
            app:mrb_pinTextColor="@color/white"
            app:mrb_rangeBarColor="@color/light_gray"
            app:mrb_tickColor="@android:color/transparent"
            app:mrb_pinMaxFont="15sp"
            app:mrb_pinMinFont="12sp"
            app:mrb_pinRadius="14dp"
            app:mrb_rangeBar="true"
            app:mrb_rangeBarPaddingBottom="20dp"
            app:mrb_rangeBar_rounded="true"
            app:mrb_selectorBoundarySize="2dp"
            app:mrb_selectorSize="10dp"
            app:mrb_temporaryPins="true"
            app:mrb_tickEnd="1500"
            app:mrb_tickInterval="25"
            app:mrb_tickStart="50" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.dagang.library.GradientButton
        android:id="@+id/button_filtertour_apply"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:button_end_color="@color/colorPrimary"
        app:button_gradient_orientation="LEFT_RIGHT"
        app:button_is_shadowed="true"
        app:button_press_end_color="@color/colorPrimaryDark"
        app:button_press_start_color="@color/colorPrimaryDark"
        app:button_radius="30dp"
        app:button_shadow_angle="90"
        app:button_shadow_color="@color/colorPrimaryShadow"
        app:button_shadow_distance="5dp"
        app:button_shadow_radius="10dp"
        app:button_size="6sp"
        app:button_start_color="@color/colorPrimary"
        app:button_text="Apply"
        app:button_text_color="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
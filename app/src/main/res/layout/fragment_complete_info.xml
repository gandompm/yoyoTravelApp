<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:ds="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent" tools:ignore="MissingDefaultResource">

    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_county_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ds_list_bg"
        android:visibility="invisible"
        ds:scale_animations="true"
        ds:scale_animations_factor="1.15"
        ds:scale_animations_pivot_center="true"
        ds:selected_index="5"
        ds:selector_background="@drawable/curve_shape_direct_select" />
    <!--ds:picker_box_view="@id/ds_country_picker"-->


    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_months_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ds_list_bg"
        android:visibility="invisible"
        ds:data_array="@array/months"
        ds:scale_animations="true"
        ds:scale_animations_factor="1.2"
        ds:scale_animations_pivot_center="false"
        ds:selected_index="5"
        ds:selector_background="@drawable/curve_shape_direct_select" />
    <!--ds:picker_box_view="@id/ds_month_picker"-->


    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_days_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ds_list_bg"
        android:visibility="invisible"
        ds:data_array="@array/days"
        ds:scale_animations="true"
        ds:scale_animations_factor="1.2"
        ds:scale_animations_pivot_center="false"
        ds:selected_index="14"
        ds:selector_background="@drawable/curve_shape_direct_select" />
    <!--ds:picker_box_view="@id/ds_day_picker"-->


    <com.ramotion.directselect.DSListView
        android:id="@+id/ds_years_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ds_list_bg"
        android:visibility="invisible"
        ds:data_array="@array/years"
        ds:scale_animations="true"
        ds:scale_animations_factor="1.2"
        ds:scale_animations_pivot_center="false"
        ds:selected_index="8"
        ds:selector_background="@drawable/curve_shape_direct_select" />
    <!--ds:picker_box_view="@id/ds_year_picker"-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ds="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:paddingBottom="@dimen/large_margin"
                                                       android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />

        <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/tv_complete_info_main_title"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/header_1"
                ds:layout_constraintEnd_toEndOf="parent"
                ds:layout_constraintStart_toStartOf="parent"
                ds:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_compinfo_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                android:src="@drawable/avatar" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tv_compinfo_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#c2c2c2"
                android:textSize="13.3sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_compinfo_img" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/tv_compinfo_email_address"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:textCursorDrawable="@drawable/grey_cursor_color"
                android:textSize="15sp"
                android:paddingStart="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_gray_editprofile_item"
                android:elevation="4dp" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_compinfo_email"/>


        <EditText
                android:id="@+id/et_compinfo_phonenumber"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:textAllCaps="false"
                android:paddingStart="8dp"
                android:background="@drawable/bg_light_editprofile_item"
                android:textSize="@dimen/standard"
                tools:ignore="HardcodedText"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" ds:srcCompat="@drawable/ic_check_green_24dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/tv_compinfo_email_address"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_compinfo_email_address"
                app:layout_constraintBottom_toBottomOf="@+id/tv_compinfo_email_address" android:elevation="5dp"
        />
        <TextView
                android:text="Mobile Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c2c2c2"
                android:id="@+id/textView3" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_compinfo_email_address"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="Full Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/et_compinfo_phonenumber"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>


        <EditText
                android:id="@+id/et_compinfo_firstname"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="@string/first_name"
                android:inputType="text"
                android:textAllCaps="false"
                android:paddingStart="8dp"
                android:background="@drawable/bg_light_editprofile_item"
                android:textSize="@dimen/standard"
                tools:ignore="HardcodedText" app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/et_edit_profile_lastname"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>

        <EditText
                android:id="@+id/et_compinfo_lastname"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="@string/last_name"
                android:textAllCaps="false"
                android:paddingStart="8dp"
                android:background="@drawable/bg_light_editprofile_item"
                android:textSize="@dimen/standard"
                tools:ignore="HardcodedText"
                android:inputType="text"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>


        <EditText
                android:id="@+id/et_compinfo_introducer_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="number"
                android:textAllCaps="false"
                android:background="@drawable/bg_light_editprofile_item"
                android:textSize="@dimen/standard"
                tools:ignore="HardcodedText"
                android:paddingStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text="@string/et_complete_info_personal_introducer_code"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/et_compinfo_firstname"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>


        <Button
                android:id="@+id/button_compinfo_continue"
                android:text="Continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/et_compinfo_introducer_code"
                android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="140dp"
                                                   android:background="@color/background"
                                                   android:layoutDirection="ltr"
                                                    android:layout_marginTop="@dimen/standard_margin">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ticket"
            android:id="@+id/imageView29" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    <TextView
            tools:text="TEHRAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_departure"
            app:layout_constraintTop_toTopOf="@+id/imageView29" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline12"
            android:textColor="@color/black" />
    <TextView
            tools:text="MASHHAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_destination" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView29"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline12" app:layout_constraintEnd_toEndOf="@+id/imageView29"
            android:layout_marginEnd="16dp" android:textColor="@color/black"/>
    <TextView
            android:text="@string/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:textSize="@dimen/small" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintStart_toStartOf="@+id/tv_itemticket_date" app:layout_constraintEnd_toEndOf="@+id/tv_itemticket_date"
            android:textColor="@color/black" android:fontFamily="serif-monospace"/>
    <TextView
            tools:text="2019/Jan/01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_date"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView33" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView29"
            app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="8dp"
            android:textColor="@color/black"/>
    <TextView
            android:text="@string/voucher_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            android:textSize="@dimen/small"
            app:layout_constraintEnd_toEndOf="@+id/imageView29"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            android:textColor="@color/black" android:fontFamily="serif-monospace"
            android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="14558697"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_voucher"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView29" android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView37" app:layout_constraintEnd_toEndOf="@+id/textView37"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline10"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.29"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline12"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.365"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline13"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.638"/>
    <TextView
            tools:text="180$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_price" android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/guideline10" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView29" android:layout_marginStart="8dp"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView36" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_itemticket_download" android:fontFamily="serif-monospace"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_adult_white"
            android:id="@+id/imageView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline12" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_adult_white"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/tv_itemticket_adultnum" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/ic_child_friendly_white_24dp"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/tv_itemticket_childnum" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_adultnum" android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_childnum" android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView18" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/imageView18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemticket_infantnum" android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView19" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="@+id/imageView19"/>
    <Button
            android:text="@string/download"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/white"
            android:id="@+id/button_itemticket_download" app:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/imageView29"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/imageView29" android:fontFamily="serif-monospace"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/ic_airplane_horizontal_black"
            android:id="@+id/imageView20"
            app:layout_constraintStart_toEndOf="@+id/tv_itemticket_departure" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_itemticket_destination" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView29"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline12"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/logo_white"
            android:id="@+id/imageView36" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView29" app:layout_constraintEnd_toStartOf="@+id/guideline10"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/imageView29"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
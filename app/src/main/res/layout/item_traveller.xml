<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_height="50dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_traverller_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/small" android:fontFamily="@font/roboto_medium" tools:text="Traveller 1"/>

        <TextView
                android:id="@+id/tv_traverller_item_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/tv_traverller_item_num"
                android:textSize="@dimen/small"
                android:textColor="@color/black2" tools:text="(Adult)"/>
        <TextView
                android:id="@+id/tv_traverller_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                tools:text="@string/enter_your_details"/>
        <ImageView
                android:id="@+id/button_traveller_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_right_primary_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
        />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        android:elevation="2dp"
        android:layout_height="130dp"
        android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="300dp">

        <ImageView
                android:id="@+id/tv_scheduleItem_startDate1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                tools:text="17"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"
                android:autoSizeTextType="uniform"
                android:lines="1"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_bold" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_3" android:layout_marginStart="8dp"
                android:textColor="#000000" android:textAlignment="center"/>
        <ImageView
                android:id="@+id/tv_scheduleItem_startDate2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"
                android:lines="1"
                tools:text="17"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintTop_toTopOf="@+id/tv_schedule_divider" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_schedule_divider"
                android:textColor="#000000" app:layout_constraintVertical_bias="0.387"
                app:layout_constraintStart_toEndOf="@+id/tv_schedule_divider"
                android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_1"
                app:autoSizeTextType="uniform" tools:maxLines="1" android:textAlignment="center"/>

        <ImageView
                android:id="@+id/tv_schedule_title"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black1"
                android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_" android:fontFamily="@font/roboto_medium"
                android:text="Historical Tour" app:autoSizeTextType="uniform" android:maxLines="1"
                app:layout_constraintHorizontal_bias="0.0"/>


        <ImageView
                android:id="@+id/tv_schedule_title2"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black1"
                android:fontFamily="@font/roboto_medium"
                android:text="Historical Tour" app:autoSizeTextType="uniform" android:maxLines="1"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/button_schedule_book"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_schedule_title"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView88" android:layout_marginStart="8dp"/>
        <ImageView
                android:id="@+id/iv_schedule_item_leftside_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"                app:layout_constraintTop_toTopOf="parent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_3"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.25"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" app:layout_constraintGuide_percent=".8"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/button_schedule_book" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"/>
        <TextView
                android:autoSizeTextType="uniform"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_schedule_start_month"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleItem_startDate1"
                app:layout_constraintEnd_toEndOf="@+id/tv_scheduleItem_startDate1"
                app:layout_constraintStart_toStartOf="@+id/tv_scheduleItem_startDate1" android:textColor="#000000"
                android:textAlignment="center" android:textSize="16sp" android:lines="1"/>
        <TextView
                android:id="@+id/tv_schedule_end_month"
                android:autoSizeTextType="uniform"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleItem_startDate2"
                app:layout_constraintEnd_toEndOf="@+id/tv_scheduleItem_startDate2"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/tv_schedule_divider" android:textSize="14sp"
                android:textAlignment="center" android:lines="1"/>
        <TextView
                android:text="__"
                android:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_schedule_divider"
                android:fontFamily="@font/roboto_bold" android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/tv_scheduleItem_startDate1" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_scheduleItem_startDate1" android:textAlignment="center"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:lines="1"
                android:background="@color/demo_dark_transparent"
                android:elevation="4dp"
                android:id="@+id/textView88" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_schedule_title"
                app:layout_constraintStart_toStartOf="@+id/tv_schedule_title" android:layout_marginStart="8dp"
                tools:text="Start :" android:textColor="#333333" android:text="Start :" android:textSize="12sp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
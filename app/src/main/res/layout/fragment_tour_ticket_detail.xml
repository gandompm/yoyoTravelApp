<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".Trip.ticket.TourTicketDetailFragment"
                                                   android:background="#f1f1f1">

    <com.github.florent37.shapeofview.shapes.ArcView
            android:id="@+id/arcview_main_page"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="30dp"
            app:shape_arc_position="bottom">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">


            <TextView
                    android:id="@+id/textView81"
                    android:text="Ticket Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>
        </RelativeLayout>

    </com.github.florent37.shapeofview.shapes.ArcView>
    <androidx.cardview.widget.CardView
            android:id="@+id/cv_orders_tour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="4dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/arcview_main_page">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">


            <TextView
                    android:text="Tour name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_tour_ticket_detail_tourname"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" android:textColor="#009688"
                    android:textSize="16sp" tools:maxLines="2" android:fontFamily="@font/roboto_bold"/>
            <TextView
                    android:text="Order date: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView89" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tour_ticket_detail_tourname"
                    app:layout_constraintStart_toStartOf="@+id/guideline21" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline21"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.03"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline22"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.97"/>
            <TextView
                    android:text="Customer name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView90" app:layout_constraintStart_toStartOf="@+id/guideline21"
                    app:layout_constraintTop_toBottomOf="@+id/textView89" android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="Start Date: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView92"
                    app:layout_constraintTop_toBottomOf="@+id/textView90"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="End Date: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView93"
                    app:layout_constraintTop_toBottomOf="@+id/textView92"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="Payment Status: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView96"
                    app:layout_constraintTop_toBottomOf="@+id/textView98"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="Order Status: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView103"
                    app:layout_constraintTop_toBottomOf="@+id/textView96"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="Total Price: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView98"
                    app:layout_constraintTop_toBottomOf="@+id/textView97"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="Quantity: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView97"
                    app:layout_constraintTop_toBottomOf="@+id/textView93"
                    app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginTop="8dp" android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black1" android:textSize="14sp"/>
            <TextView
                    android:text="2019/05/25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_order_date"
                    app:layout_constraintStart_toEndOf="@+id/textView89"
                    android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView89"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="2019/07/25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_start_date"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView92"
                    app:layout_constraintStart_toEndOf="@+id/textView92" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="2019/08/02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_end_date"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView93"
                    app:layout_constraintStart_toEndOf="@+id/textView93" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="5 person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_quantity"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView97"
                    app:layout_constraintStart_toEndOf="@+id/textView97" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="1200€"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_total_price"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView98"
                    app:layout_constraintStart_toEndOf="@+id/textView98" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="Paid"
                    android:id="@+id/tv_tour_ticket_detail_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView96"
                    app:layout_constraintStart_toEndOf="@+id/textView96" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="Prereserved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_order_status"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView103"
                    app:layout_constraintStart_toEndOf="@+id/textView103" android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="parham gandom kar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_customer_name"
                    app:layout_constraintStart_toEndOf="@+id/textView90"
                    android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView90"
                    android:fontFamily="@font/roboto_regular" android:textColor="@color/black1"
                    android:textSize="14sp"/>
            <TextView
                    android:text="Download your Tickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tour_ticket_detail_download_ticket" app:layout_constraintEnd_toStartOf="@+id/guideline22"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline21"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView103"
                    android:layout_marginTop="48dp" android:fontFamily="@font/roboto_bold" android:textColor="#3F51B5"
                    android:textSize="16sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
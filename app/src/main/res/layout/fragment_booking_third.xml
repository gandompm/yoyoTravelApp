<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/background">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.4"/>
    <ImageView
            android:id="@+id/iv_booking_third"
            android:src="@drawable/green_tick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline8" android:layout_marginTop="24dp"/>



    <TextView
            android:text="@string/thank_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_booking_third_message_1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/iv_booking_third"
            android:textColor="@color/black1" android:textSize="@dimen/header_1"/>
    <TextView
            android:text="@string/your_payment_has_been_successfully_processed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_booking_third_message_2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_booking_third_message_1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="@dimen/header_2"/>


    <TextView
            android:id="@+id/tv_booking_third_voucher"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/voucher_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_booking_third_voucher_number"
            app:layout_constraintTop_toTopOf="@+id/iv_booking_third_voucher_number"
            app:layout_constraintBottom_toBottomOf="@+id/iv_booking_third_voucher_number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"  android:elevation="2dp"
            android:gravity="center_vertical|center_horizontal"/>

    <TextView
            android:id="@+id/tv_booking_third_voucher_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="8dp"
            tools:text="CXDT2887A"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/red"
            app:layout_constraintTop_toTopOf="@+id/iv_booking_third_voucher_number"
            app:layout_constraintBottom_toBottomOf="@+id/iv_booking_third_voucher_number" android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_booking_third_voucher_number" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/iv_booking_third_voucher_number" android:gravity="center_vertical"/>

    <ImageButton
            android:id="@+id/bt_booking_third_copy_code"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_content_copy"
            app:layout_constraintTop_toTopOf="@+id/tv_booking_third_voucher_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_booking_third_voucher_number" android:elevation="2dp"
            android:layout_marginEnd="8dp"
    />
    <ImageView
            android:id="@+id/iv_booking_third_voucher_number"
            android:src="@color/black4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_booking_third_message_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
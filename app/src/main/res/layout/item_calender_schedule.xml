<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="80dp"
                                                   android:layout_height="50dp"
                                                   android:foreground="?attr/selectableItemBackgroundBorderless">


    <TextView
            android:layout_width="54dp"
            android:layout_height="18dp"
            tools:text="January"
            android:autoSizeTextType="uniform"
            android:id="@+id/tv_calenderitem_month"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black2"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="4dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/iv_calenderitem" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
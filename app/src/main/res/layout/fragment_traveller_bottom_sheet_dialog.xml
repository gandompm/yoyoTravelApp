<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="@dimen/large_margin">


    <ImageView
            android:id="@+id/iv_close_bottom_sheet"
            android:src="@drawable/ic_close_blue_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="@string/travellers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="@dimen/header_1"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_close_bottom_sheet" android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView16"/>

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_adult_black"
            app:layout_constraintTop_toBottomOf="@+id/imageView16"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:id="@+id/tv_flight_travellers_num"
            android:text="@string/adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black1"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/header_2" app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_adult_black"
            app:layout_constraintStart_toStartOf="@+id/imageView7" app:layout_constraintEnd_toStartOf="@+id/tv_flight_travellers_num"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"/>
    <TextView
            android:id="@+id/tv_flight_adult_num"
            android:text="@string/child"
            android:textColor="@color/black1"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/tv_flight_travellers_num" android:textSize="@dimen/header_2"/>

    <ImageView
            android:id="@+id/iv_flight_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add_circle_outline_blue_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_num"
            app:layout_constraintBottom_toBottomOf="@+id/tv_flight_num"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/tv_flight_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/iv_flight_minus"
            app:layout_constraintBottom_toBottomOf="@+id/iv_flight_minus"
            app:layout_constraintEnd_toStartOf="@+id/iv_flight_plus" android:layout_marginEnd="16dp"
            android:gravity="center_horizontal" android:textSize="@dimen/header_1"/>

    <ImageView
            android:id="@+id/iv_flight_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_remove_circle_outline_light_24dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_flight_num" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_travellers_num"
            app:layout_constraintBottom_toBottomOf="@+id/tv_flight_travellers_num"/>

    <ImageView
            android:id="@+id/iv_flight_plus_child"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add_circle_outline_blue_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_num_child"
            app:layout_constraintBottom_toBottomOf="@+id/tv_flight_num_child" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/tv_flight_num_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white1"
            app:layout_constraintTop_toTopOf="@+id/iv_flight_minus_child"
            app:layout_constraintBottom_toBottomOf="@+id/iv_flight_minus_child"
            app:layout_constraintEnd_toStartOf="@+id/iv_flight_plus_child" android:layout_marginEnd="16dp"
            android:gravity="center_horizontal" android:textSize="@dimen/header_1"/>

    <ImageView
            android:id="@+id/iv_flight_minus_child"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_remove_circle_outline_light_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_adult_num" app:layout_constraintBottom_toBottomOf="@+id/tv_flight_adult_num"
            app:layout_constraintEnd_toStartOf="@+id/tv_flight_num_child" android:layout_marginEnd="16dp"/>
    <ImageView
            android:src="@drawable/ic_child_friendly_black_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView8" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"/>
    <TextView
            android:text="@string/infant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/tv_flight_adult_num" android:textColor="@color/black1"
            android:textSize="@dimen/header_2"/>

    <ImageView
            android:id="@+id/iv_flight_plus_infant"
            android:layout_width="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_circle_outline_blue_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_num_infant"
            app:layout_constraintBottom_toBottomOf="@+id/tv_flight_num_infant" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/tv_flight_num_infant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white1"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_flight_plus_infant"
            app:layout_constraintTop_toTopOf="@+id/iv_flight_minus_infant"
            app:layout_constraintBottom_toBottomOf="@+id/iv_flight_minus_infant"
            android:gravity="center_horizontal" android:textSize="@dimen/header_1"/>

    <ImageView
            android:id="@+id/iv_flight_minus_infant"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_remove_circle_outline_light_24dp"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/tv_flight_num_infant" android:layout_marginEnd="16dp"/>
    <Button
            android:id="@+id/button_flight_apply_traveller"
            android:text="Apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_rectangle"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="(0-2)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView56"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            android:textSize="@dimen/small" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="(2-12)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView57"
            app:layout_constraintTop_toTopOf="@+id/tv_flight_adult_num" app:layout_constraintBottom_toBottomOf="@+id/tv_flight_adult_num"
            app:layout_constraintStart_toEndOf="@+id/tv_flight_adult_num" android:layout_marginStart="8dp"
            android:textSize="@dimen/small"/>
    <ImageView
            android:src="@color/black3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/imageView16" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>